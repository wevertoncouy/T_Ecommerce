@model IEnumerable<Ecommerce.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Departamentos</h2>

<p>
    @Html.ActionLink("Novo Departamento", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.DepartamentoId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.DepartamentoId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.DepartamentoId }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
