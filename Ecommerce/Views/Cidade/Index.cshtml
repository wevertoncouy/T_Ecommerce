@model IEnumerable<Ecommerce.Models.Cidade>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cidades</h2>

<p>
    @Html.ActionLink("Criar Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CidadeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CidadeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CidadeId })
        </td>
    </tr>
}

</table>
